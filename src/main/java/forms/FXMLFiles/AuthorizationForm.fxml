<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          maxWidth="Infinity"
          hgap="20" vgap="10">

    <padding><Insets top="20" right="10" bottom="20" left="10"/></padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="100">
        </ColumnConstraints>

    </columnConstraints>

    <Button GridPane.rowIndex = "1"  fx:id="loginAsStudentBtn" text="Login as" GridPane.halignment="CENTER"
            prefWidth="250" maxWidth="-Infinity" onMouseClicked="#loginAsStudent"></Button>
    <Button GridPane.rowIndex="6"  fx:id="loginAsGuestBtn" text="Login as Guest" GridPane.halignment="CENTER"
            prefWidth="250" maxWidth="-Infinity" onMouseClicked="#loginAsGuest"></Button>

    <ListView GridPane.rowIndex="7"  fx:id="usersListView"  onMouseClicked="#selectUserOnListView"
    prefWidth="250" maxWidth="-Infinity"  GridPane.halignment="CENTER"></ListView>
    <TextField GridPane.rowIndex="8"  fx:id="dateField"  promptText="dd/mm" text="01/01"
        prefWidth="250" maxWidth="-Infinity"  GridPane.halignment="CENTER"></TextField>

</GridPane>
