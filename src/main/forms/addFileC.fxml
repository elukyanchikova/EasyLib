<GridPane hgap="50" maxWidth="Infinity" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets bottom="20" left="10" right="10" top="20" /></padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="200">
        </ColumnConstraints>

    </columnConstraints>

   <children>

      <TextField GridPane.rowSpan="1" />
      <TextField fx:id="titleField" maxWidth="-Infinity" prefHeight="25.0" prefWidth="149.0" promptText="title of the doc" GridPane.rowIndex="0" />
      <TextField fx:id="authorsField" maxWidth="-Infinity" prefWidth="150" promptText="authors" GridPane.rowIndex="1" />
      <TextField fx:id="docTypeField" maxWidth="-Infinity" prefWidth="150" promptText="doc type" GridPane.rowIndex="2" />
      <TextField fx:id="keywordsField" maxWidth="-Infinity" prefWidth="150" promptText="keywords" GridPane.rowIndex="3" />
      <TextField fx:id="priceField" maxWidth="-Infinity" prefWidth="150" promptText="price of the doc" GridPane.rowIndex="4" />
       <TextField fx:id="numbOfCopiesField" maxWidth="-Infinity" prefWidth="150" promptText="number of copies" GridPane.rowIndex="5" />
   </children>
   <rowConstraints>
      <RowConstraints maxHeight="50.0" minHeight="0.0" prefHeight="24.0" />
      <RowConstraints maxHeight="50.0" minHeight="0.0" prefHeight="26.0" />
      <RowConstraints />
      <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0" />
